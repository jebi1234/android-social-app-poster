<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".ResetPasswordActivity">

    <include
        android:id="@+id/reset_password_toolbar"
        layout="@layout/app_bar_layout"></include>

    <TextView
        android:id="@+id/reset_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/reset_password_toolbar"
        android:layout_marginTop="100dp"
        android:text="We will mail you a link when you provide email and click the send button. Please click that link to reset your password. "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/reset_password_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/reset_password_text"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="12dp"
        android:ems="10"
        android:background="@drawable/inputs"
        android:hint="write your email here.."
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/reset_password_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_password_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/button"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="Send Email" />


</RelativeLayout>